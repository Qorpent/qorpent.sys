require app
namespace Ugmk.Assoi.Team

	Struct ToXmlQuery
		string Lang : "'bxl'"
		string Format : "'wiki'"
		string Script : ""
	
	Struct BxOptions 
		bool AutoCompile
		int Timeout : 300
		
    Action ToXml "Запрос на публикацию"
        Url = "/toxml"
		Arguments = ^ToXmlQuery
		Method = 'QPOST'
		PostField = Script


    Controller BxlDev
		service bxldev_ext
		item bxquery type=^ToXmlQuery persistent
		item bxoptions type=^BxOptions persistent

	Layout dev
		layout main "Главная рабочая зона" horizontal
			widget ^BxlDev "Испытательный стенд"  horizontal
				view bxlui_editor "Редактор исходного кода" order=1  height=max width=max
				view bxlui_result "Результат" order=2 height=max width=max
				
