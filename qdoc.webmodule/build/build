#!/bin/sh
args=$*
./hooks/prebuild ${args}
ALL=1
COMPASS=0
BSC=0
OPTIMIZE=0
TSC=0
CLEANUP=0
TESTS=0
call=./build/
REST=
while test $# -gt 0
do
    case "$1" in
        all) ALL=1
            ;;
        compass) COMPASS=1 ; ALL=0 ;
            ;;
        bsc) BSC=1 ; ALL=0;
            ;;
        tsc) TSC=1 ; ALL=0;
            ;;
        optimize) OPTIMIZE=1 ; ALL=0;
            ;;
        clean) CLEANUP=1; ALL=0;
            ;;
        test) TESTS=1; ALL=0;
            ;;
        -clean) CLEANUP=2
            ;;
        -compass) COMPASS=2
            ;;
        -bsc) BSC=2
            ;;
        -tsc) TSC=2
            ;;
        -optimize) OPTIMIZE=2
            ;;
        -test) TESTS=2
            ;;
        *) REST="$REST $1"
    esac
    shift
done

if [ "$CLEANUP" == 1 ]; then
    ${call}clean ${REST}
fi

if ( [ "$ALL" == 1 ] && [ "$TSC" != 2 ] ) || [ "$TSC" == 1 ]; then
    ${call}tsc ${REST}
fi

if ( [ "$ALL" == 1 ] && [ "$BSC" != 2 ] ) || [ "$BSC" == 1 ]; then
    ${call}bsc ${REST}
fi

if ( [ "$ALL" == 1 ] && [ "$COMPASS" != 2 ] ) || [ "$COMPASS" == 1 ]; then
	${call}compass ${REST}
fi

if ( [ "$ALL" == 1 ] && [ "$OPTIMIZE" != 2 ] ) || [ "$OPTIMIZE" == 1 ]; then
	${call}optimize ${REST}
fi

if ( [ "$ALL" == 1 ] && [ "$TESTS" != 2 ] ) || [ "$TESTS" == 1 ]; then
	${call}test ${REST}
fi

./hooks/afterbuild ${args}